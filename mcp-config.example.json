{
  "mcpServers": {
    "glue-workflow-api": {
      "command": "node",
      "args": [
        "/absolute/path/to/your/glue/apps/api/dist/mcp-server.js"
      ],
      "env": {
        "MONGODB_URI": "mongodb://localhost:27017/glue",
        "REDIS_URL": "redis://localhost:6379",
        "NODE_ENV": "production",
        "LOG_LEVEL": "info"
      }
    }
  }
}
