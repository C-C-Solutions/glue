{
  "name": "@glue/api",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:mcp": "tsx watch src/mcp-server.ts",
    "dev:mcp-http": "tsx watch src/mcp-server-http.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:mcp": "node dist/mcp-server.js",
    "start:mcp-http": "node dist/mcp-server-http.js",
    "clean": "rm -rf dist *.tsbuildinfo",
    "type-check": "tsc --noEmit",
    "lint": "echo 'No linting configured yet'",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/swagger": "^8.0.0",
    "@fastify/swagger-ui": "^4.0.0",
    "@glue/config": "workspace:*",
    "@glue/core": "workspace:*",
    "@glue/db": "workspace:*",
    "@glue/queue": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "cors": "^2.8.6",
    "dotenv": "^16.3.1",
    "express": "^5.2.1",
    "fastify": "^4.25.0",
    "zod": "^3.25.1",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
